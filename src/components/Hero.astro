<script>
  const anime = (await import('animejs')).default;
  
  // Animate hero title with letter-by-letter effect
  const heroTitle = document.querySelector('.hero-title');
  if (heroTitle) {
    heroTitle.innerHTML = heroTitle.textContent?.replace(/\S/g, "<span class='letter'>$&</span>") || '';
    
    anime.timeline()
      .add({
        targets: '.hero-title .letter',
        scale: [0, 1],
        opacity: [0, 1],
        translateZ: 0,
        duration: 800,
        delay: (el, i) => 70 * i,
        easing: 'easeOutExpo',
      })
      .add({
        targets: '.hero-tagline',
        opacity: [0, 1],
        translateY: [30, 0],
        duration: 1000,
        easing: 'easeOutExpo',
      }, '-=400')
      .add({
        targets: '.hero-cta',
        opacity: [0, 1],
        scale: [0.8, 1],
        duration: 600,
        easing: 'easeOutExpo',
      }, '-=600');
  }
</script>