---
import { config } from '../data/config.js';
---

<section class="about section" id="about">
  <div class="container">
    <div class="about-content">
      <div class="about-image">
        {config.personal.avatar && (
          <img src={config.personal.avatar} alt={config.personal.name} />
        )}
        <div class="about-image-label">This is me.</div>
      </div>
      
      <div class="about-text">
        <h3 class="about-intro">{config.personal.bio.intro}</h3>
        <div class="about-description">
          {config.personal.bio.description.split('\n\n').map(paragraph => (
            <p>{paragraph}</p>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    margin-left: 280px;
    padding: var(--spacing-xl) 0;
  }
  
  .about-content {
    display: grid;
    grid-template-columns: 350px 1fr;
    gap: 4rem;
    align-items: start;
  }
  
  .about-image {
    position: relative;
    opacity: 0;
    transform: translateX(-30px);
  }
  
  /* Fallback: Show about section if JavaScript fails */
  #about:not(.js-loaded) .about-image,
  #about:not(.js-loaded) .about-text,
  #about:not(.js-loaded) .about-image-label {
    opacity: 1;
    transform: none;
  }
  
  /* Fallback animation after 2 seconds */
  @media (prefers-reduced-motion: no-preference) {
    #about:not(.js-loaded) .about-image,
    #about:not(.js-loaded) .about-text,
    #about:not(.js-loaded) .about-image-label {
      animation: fadeInFallback 0.1s ease-out 2s forwards;
    }
  }
  
  @keyframes fadeInFallback {
    to {
      opacity: 1;
      transform: none;
    }
  }
  
  .about-image img {
    width: 100%;
    height: auto;
    border-radius: var(--border-radius);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
    transition: transform 0.3s ease;
  }
  
  .about-image:hover img {
    transform: scale(1.02);
  }
  
  .about-image-label {
    position: absolute;
    bottom: -1rem;
    right: -1rem;
    background: var(--color-accent);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius);
    font-size: 0.875rem;
    font-weight: 600;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
    opacity: 0;
    transform: scale(0.8);
  }
  
  .about-text {
    padding-top: 1rem;
    opacity: 0;
    transform: translateX(30px);
  }
  
  .about-intro {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    color: var(--color-text);
    margin-bottom: 2rem;
  }
  
  .about-description p {
    margin-bottom: 1.5rem;
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
  }
  
  @media (max-width: 968px) {
    .about {
      margin-left: 0;
    }
    
    .about-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .about-image {
      max-width: 300px;
      margin: 0 auto;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', async () => {
    try {
      const animeModule = await import('animejs');
      const anime = animeModule.default;
      
      // Animate about section
      const aboutSection = document.querySelector('#about');
      if (aboutSection) {
        let hasAnimated = false;
        
        const animateAbout = () => {
          if (hasAnimated) return;
          hasAnimated = true;
          
          const image = aboutSection.querySelector('.about-image');
          const text = aboutSection.querySelector('.about-text');
          const label = aboutSection.querySelector('.about-image-label');
          
          // Animate image and text simultaneously
          if (image && text) {
            anime({
              targets: [image, text],
              opacity: [0, 1],
              translateX: [
                {value: -30, duration: 0},
                {value: 0, duration: 1000}
              ],
              delay: anime.stagger(100, {start: 0}),
              easing: 'easeOutCubic',
            });
          }
          
          // Animate label with bounce
          if (label) {
            anime({
              targets: label,
              opacity: [0, 1],
              scale: [0.8, 1],
              duration: 600,
              delay: 800,
              easing: 'easeOutElastic(1, .8)',
            });
          }
          
          // Mark as loaded after animation starts
          aboutSection.classList.add('js-loaded');
        };
        
        const observerOptions = {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              animateAbout();
              observer.unobserve(entry.target);
            }
          });
        }, observerOptions);
        
        observer.observe(aboutSection);
        
        // Use double requestAnimationFrame to ensure DOM is ready, then check viewport
        requestAnimationFrame(() => {
          requestAnimationFrame(() => {
            // Check if already in viewport with more lenient check
            const rect = aboutSection.getBoundingClientRect();
            const windowHeight = window.innerHeight || document.documentElement.clientHeight;
            if (rect.top < windowHeight + 200 && rect.bottom > -200) {
              animateAbout();
            }
          });
        });
        
        // Fallback timeout - show after 1.5 seconds if not animated
        setTimeout(() => {
          if (!hasAnimated) {
            animateAbout();
          }
        }, 1500);
      }
    } catch (error) {
      console.error('Animation error:', error);
      document.querySelectorAll('#about .about-image, .about-text, .about-image-label').forEach(el => {
        el.style.opacity = '1';
        el.style.transform = 'none';
      });
    }
  });
</script>
