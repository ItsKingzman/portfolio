---
import { config } from '../data/config.js';
---

<section class="about section" id="about">
  <div class="container">
    <div class="about-quote">
      <h2>I believe in a user centered design approach, ensuring that every project I work on is tailored to meet the specific needs of its users.</h2>
    </div>
    
    <div class="about-content">
      <div class="about-image">
        {config.personal.avatar && (
          <img src={config.personal.avatar} alt={config.personal.name} />
        )}
        <div class="about-image-label">This is me.</div>
      </div>
      
      <div class="about-text">
        <h3 class="about-intro">{config.personal.bio.intro}</h3>
        <div class="about-description">
          {config.personal.bio.description.split('\n\n').map(paragraph => (
            <p>{paragraph}</p>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    margin-left: 280px;
    padding: var(--spacing-xl) 0;
  }
  
  .about-quote {
    max-width: 900px;
    margin: 0 auto 6rem;
    text-align: center;
  }
  
  .about-quote h2 {
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    line-height: 1.5;
    color: var(--color-text);
    font-weight: 400;
  }
  
  .about-content {
    display: grid;
    grid-template-columns: 350px 1fr;
    gap: 4rem;
    align-items: start;
  }
  
  .about-image {
    position: relative;
  }
  
  .about-image img {
    width: 100%;
    height: auto;
    border-radius: var(--border-radius);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
  }
  
  .about-image-label {
    position: absolute;
    bottom: -1rem;
    right: -1rem;
    background: var(--color-accent);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius);
    font-size: 0.875rem;
    font-weight: 600;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
  }
  
  .about-text {
    padding-top: 1rem;
  }
  
  .about-intro {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    color: var(--color-text);
    margin-bottom: 2rem;
  }
  
  .about-description p {
    margin-bottom: 1.5rem;
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
  }
  
  @media (max-width: 968px) {
    .about {
      margin-left: 0;
    }
    
    .about-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .about-image {
      max-width: 300px;
      margin: 0 auto;
    }
    
    .about-quote {
      margin-bottom: 3rem;
    }
  }
</style>