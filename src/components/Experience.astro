---
import { config } from '../data/config.js';
---

<section class="experience section" id="experience">
  <div class="container">
    <h2 class="section-title">My Experience</h2>
    
    <div class="timeline">
      {config.experience.map((job, index) => (
        <div class="timeline-item" style={`animation-delay: ${index * 0.15}s`}>
          <div class="timeline-marker"></div>
          <div class="timeline-content">
            <h3 class="job-company">{job.company}</h3>
            <h4 class="job-position">{job.position}</h4>
            <p class="job-duration">{job.duration}</p>
            {job.description && (
              <p class="job-description">{job.description}</p>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .experience {
    margin-left: 280px;
    padding: var(--spacing-xl) 0;
  }
  
  .section-title {
    text-align: center;
    margin-bottom: 4rem;
    font-size: clamp(2rem, 4vw, 3rem);
  }
  
  .timeline {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    padding-left: 3rem;
  }
  
  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-border);
  }
  
  .timeline-item {
    position: relative;
    padding-bottom: 3rem;
    opacity: 0;
    animation: fadeInLeft 0.6s ease-out forwards;
  }
  
  .timeline-marker {
    position: absolute;
    left: -3rem;
    top: 0.5rem;
    width: 16px;
    height: 16px;
    background: var(--color-accent);
    border-radius: 50%;
    border: 3px solid var(--color-bg);
    box-shadow: 0 0 0 3px var(--color-border);
  }
  
  .timeline-content {
    background: var(--color-bg-secondary);
    border-radius: var(--border-radius);
    padding: 2rem;
    border: 1px solid var(--color-border);
    transition: all 0.3s ease;
  }
  
  .timeline-content:hover {
    transform: translateX(8px);
    border-color: var(--color-accent);
  }
  
  .job-company {
    font-size: 1.5rem;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }
  
  .job-position {
    font-size: 1.125rem;
    color: var(--color-accent);
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  
  .job-duration {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
  }
  
  .job-description {
    font-size: 1rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
  
  @media (max-width: 968px) {
    .experience {
      margin-left: 0;
    }
    
    .timeline {
      padding-left: 2rem;
    }
    
    .timeline-marker {
      left: -2rem;
    }
  }
  
  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>