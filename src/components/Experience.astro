---
import { config } from '../data/config.js';
---

<section class="experience section" id="experience">
  <div class="container">
    <h2 class="section-title">My Experience</h2>
    
    <div class="timeline">
      {config.experience.map((job, index) => (
        <div class="timeline-item">
          <div class="timeline-marker"></div>
          <div class="timeline-content">
            <h3 class="job-company">{job.company}</h3>
            <h4 class="job-position">{job.position}</h4>
            <p class="job-duration">{job.duration}</p>
            {job.description && (
              <p class="job-description">{job.description}</p>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .experience {
    margin-left: 280px;
    padding: var(--spacing-xl) 0;
  }
  
  .section-title {
    text-align: center;
    margin-bottom: 4rem;
    font-size: clamp(2rem, 4vw, 3rem);
    opacity: 0;
    transform: translateY(20px);
  }
  
  .timeline {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    padding-left: 3rem;
  }
  
  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-border);
  }
  
  .timeline-item {
    position: relative;
    padding-bottom: 3rem;
    opacity: 0;
    transform: translateX(-30px);
  }
  
  /* Fallback: Show experience if JavaScript fails */
  #experience:not(.js-loaded) .section-title,
  #experience:not(.js-loaded) .timeline-item {
    opacity: 1;
    transform: none;
  }
  
  /* Fallback animation after 2 seconds */
  @media (prefers-reduced-motion: no-preference) {
    #experience:not(.js-loaded) .section-title,
    #experience:not(.js-loaded) .timeline-item {
      animation: fadeInLeftFallback 0.1s ease-out 2s forwards;
    }
  }
  
  @keyframes fadeInLeftFallback {
    to {
      opacity: 1;
      transform: none;
    }
  }
  
  .timeline-marker {
    position: absolute;
    left: -3rem;
    top: 0.5rem;
    width: 16px;
    height: 16px;
    background: var(--color-accent);
    border-radius: 50%;
    border: 3px solid var(--color-bg);
    box-shadow: 0 0 0 3px var(--color-border);
  }
  
  .timeline-content {
    background: var(--color-bg-secondary);
    border-radius: var(--border-radius);
    padding: 2rem;
    border: 1px solid var(--color-border);
    transition: all 0.3s ease;
  }
  
  .timeline-content:hover {
    transform: translateX(10px);
    border-color: var(--color-accent);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.15);
  }
  
  .job-company {
    font-size: 1.5rem;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }
  
  .job-position {
    font-size: 1.125rem;
    color: var(--color-accent);
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  
  .job-duration {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
  }
  
  .job-description {
    font-size: 1rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
  
  @media (max-width: 968px) {
    .experience {
      margin-left: 0;
    }
    
    .timeline {
      padding-left: 2rem;
    }
    
    .timeline-marker {
      left: -2rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', async () => {
    try {
      const animeModule = await import('animejs');
      const anime = animeModule.default;
      
      // Animate experience section
      const experienceSection = document.querySelector('#experience');
      if (experienceSection) {
        const observerOptions = {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        };
        
        let hasAnimated = false;
        
        const animateExperience = () => {
          if (hasAnimated) return;
          hasAnimated = true;
          
          const sectionTitle = experienceSection.querySelector('.section-title');
          if (sectionTitle) {
            anime({
              targets: sectionTitle,
              opacity: [0, 1],
              translateY: [20, 0],
              duration: 800,
              easing: 'easeOutExpo',
            });
          }
          
          // Animate timeline items with stagger
          const timelineItems = experienceSection.querySelectorAll('.timeline-item');
          anime({
            targets: timelineItems,
            opacity: [0, 1],
            translateX: [-30, 0],
            duration: 800,
            delay: anime.stagger(150),
            easing: 'easeOutCubic',
          });
          
          // Mark as loaded after animation starts
          experienceSection.classList.add('js-loaded');
        };
        
        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              animateExperience();
              observer.unobserve(entry.target);
            }
          });
        }, observerOptions);
        
        observer.observe(experienceSection);
        
        // Use requestAnimationFrame to ensure DOM is ready, then check viewport
        requestAnimationFrame(() => {
          requestAnimationFrame(() => {
            // Check if already in viewport with more lenient check
            const rect = experienceSection.getBoundingClientRect();
            const windowHeight = window.innerHeight || document.documentElement.clientHeight;
            if (rect.top < windowHeight + 200 && rect.bottom > -200) {
              animateExperience();
            }
          });
        });
        
        // Fallback timeout - show after 1.5 seconds if not animated
        setTimeout(() => {
          if (!hasAnimated) {
            animateExperience();
          }
        }, 1500);
      }
    } catch (error) {
      console.error('Animation error:', error);
      // Fallback: show elements
      document.querySelectorAll('#experience .section-title, .timeline-item').forEach(el => {
        el.style.opacity = '1';
        el.style.transform = 'none';
      });
    }
  });
</script>
