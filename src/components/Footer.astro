---
import { config } from '../data/config.js';
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-left">
        <p class="footer-text">{config.footer.text}</p>
      </div>
      
      <div class="footer-right">
        <p class="footer-name">{config.personal.name.toUpperCase()}</p>
        <a href={`mailto:${config.personal.email}`} class="footer-email">
          {config.personal.email}
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    margin-left: 280px;
    padding: 4rem 0;
    border-top: 1px solid var(--color-border);
    background: var(--color-bg-secondary);
  }
  
  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .footer-text {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }
  
  .footer-right {
    text-align: right;
  }
  
  .footer-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.25rem;
    letter-spacing: 0.05em;
  }
  
  .footer-email {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    transition: color 0.3s ease;
  }
  
  .footer-email:hover {
    color: var(--color-accent);
  }
  
  @media (max-width: 968px) {
    .footer {
      margin-left: 0;
    }
    
    .footer-content {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }
    
    .footer-right {
      text-align: center;
    }
  }
</style>